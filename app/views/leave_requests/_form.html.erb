<%= form_with(model: @leave_request, local: true) do |form| %>
  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>


  <div class="field">
    <%= form.label :leavetype %>
    <%= form.collection_select :leavetype_id, Leavetype.all, :id, :leave_type, prompt: "Select a Leavetype" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
